<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#00000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="@dimen/dp_320"
        android:background="@mipmap/location_bg"
        android:layout_height="330dp"
        android:orientation="vertical">
        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="5dp"
            app:tl_indicator_color="#89FFFC"
            app:tl_indicator_height="2dp"
            app:tl_iconGravity="TOP"
            app:tl_iconHeight="0dp"
            app:tl_iconVisible="false"
            app:tl_iconWidth="0dp"
            app:tl_textSelectColor="#89FFFC"
            app:tl_textUnselectColor="@color/color_white"
            app:tl_textsize="@dimen/dp_10" />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>
</RelativeLayout>