<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#acfffd"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/right_icon1"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/left_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/icon_geren_green" />

        <TextView
            android:id="@+id/left_text1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/left_icon1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:singleLine="true"
            android:text="未登录"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/icon_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@mipmap/icon_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_icon2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/left_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/icon_password" />

        <TextView
            android:id="@+id/left_text2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/left_icon2"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@mipmap/icon_right" />
    </RelativeLayout>

