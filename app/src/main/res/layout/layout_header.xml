    <RelativeLayout
        android:id="@+id/right_icon5"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/left_icon5"
            android:layout_width="28dp"
            android:layout_height="28dp"
