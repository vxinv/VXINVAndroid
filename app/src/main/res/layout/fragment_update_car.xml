<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAFFFE"
    tools:context=".fragment.UpdateCarFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dp_10"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/toolbar_iv"
            android:layout_width="50dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="11.62dp"
                android:layout_height="18.5dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="17dp"
                android:src="@mipmap/icon_back_left"></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/toolbar_tv"
            android:layout_width="73.5dp"
            android:layout_height="25dp"
            android:text="绑定车辆"
            android:textColor="#007256"
            android:textSize="18dp"></TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:text="车牌号码"
            android:textColor="#007256"
            android:textSize="17dp"></TextView>

        <EditText
            android:id="@+id/car_number_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/license"
            android:hint="请输入车牌号"
            android:textColor="#007256"
            android:textColorHint="#ABABAB"
            android:textCursorDrawable="@drawable/guangbiao"
            android:textSize="17dp"
            android:theme="@style/MyEditText"></EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit_my"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_below="@id/rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@mipmap/icon_xiugai_pwd"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/color_white"
        android:textSize="17dp"></TextView>


    <TextView
        android:id="@+id/tv_unlock"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_commit_my"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@mipmap/icon_xiugai_pwd"
        android:gravity="center"
        android:text="解绑"
        android:textColor="@color/color_white"
        android:textSize="17dp"></TextView>


</RelativeLayout>